<actions version="0.0">
  
  <action>
    <id>vm-terminate</id>
    <parameters>
      <terminate-instance>
        <instance>test-backup</instance>
      </terminate-instance>
    </parameters>
  </action>
  
  <action>
    <id>delete-data-volume</id>
    <dependencies>
      <dependency>vm-terminate</dependency>
    </dependencies>
    <parameters>
      <delete-volume>
        <volume>data</volume>
      </delete-volume>
    </parameters>
  </action>
  
  <action>
    <id>delete-root-volume</id>
    <dependencies>
      <dependency>vm-terminate</dependency>
    </dependencies>
    <parameters>
      <delete-volume>
        <volume>root</volume>
      </delete-volume>
    </parameters>
  </action>
  
  <action>
    <id>delete-data-image</id>
    <parameters>
      <delete-image>
        <image>data-image</image>
      </delete-image>
    </parameters>
  </action>
  
  <action>
    <id>delete-root-image</id>
    <parameters>
      <delete-image>
        <image>root-image</image>
      </delete-image>
    </parameters>
  </action>
</actions>